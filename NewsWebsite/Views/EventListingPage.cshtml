@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.EventListingPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using NewsWebsite.Controllers;
@using NewsWebsite.Models;
@using Umbraco.Cms.Core.Models.PublishedContent;
@using Examine;
@using Examine.Search;
@using Umbraco.Cms.Infrastructure.Examine;
@inject IExamineManager ExamineManager
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Events";

    // Pagination setup
    int pageSize = Model.PageSize > 0 ? Model.PageSize : 10;
    int currentPage = 1;
    if (int.TryParse(Context.Request.Query["page"], out int page))
    {
        currentPage = page;
    }

    // Get search term from query string
    string searchTerm = Context.Request.Query["query"].ToString();
    var searchModel = new EventSearchModel { SearchTerm = searchTerm };

    // Get all events - either filtered by search or all events
    IEnumerable<EventDetailPage> allEvents;

    if (!string.IsNullOrWhiteSpace(searchTerm))
    {
        // Use Examine for searching
        if (ExamineManager.TryGetIndex("ExternalIndex", out var index))
        {
            var searcher = index.Searcher;
            var query = searcher.CreateQuery()
                .NodeTypeAlias("eventDetailPage")
                .And()
                .GroupedOr(new[] { "nodeName", "location", "description" }, searchTerm);

            var searchResults = query.Execute();
            
            // Convert search results to IPublishedContent
            var eventNodes = searchResults
                .Select(result => Umbraco.Content(result.Id))
                .Where(content => content != null)
                .OfType<EventDetailPage>()
                .Where(e => e.IsVisible())
                .OrderByDescending(e => e.EventDate);

            allEvents = eventNodes;
        }
        else
        {
            // Fallback if index not found
            allEvents = Umbraco.ContentAtRoot()
                .DescendantsOrSelf<EventDetailPage>()
                .Where(e => e.IsVisible() && 
                    (e.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                     (e.Location != null && e.Location.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                     (e.Description != null && e.Description.ToString().Contains(searchTerm, StringComparison.OrdinalIgnoreCase))))
                .OrderByDescending(e => e.EventDate);
        }
    }
    else
    {
        // No search term, get all events
        allEvents = Umbraco.ContentAtRoot()
            .DescendantsOrSelf<EventDetailPage>()
            .Where(e => e.IsVisible())
            .OrderByDescending(e => e.EventDate);
    }

    // Calculate pagination
    int totalItems = allEvents.Count();
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);

    // Get events for current page
    var eventsForPage = allEvents.Skip((currentPage - 1) * pageSize).Take(pageSize);
}

<div class="container py-4">
    <!-- Search Form -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Search Events</h5>
                    <form action="@Model.Url()" method="get" class="row g-3">
                        <div class="col-md-9">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" name="query" class="form-control" placeholder="Search by event name, location or description..." value="@searchTerm" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary w-100">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results Info -->
    @if (!string.IsNullOrWhiteSpace(searchTerm))
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Showing results for: <strong>@searchTerm</strong> (@totalItems @(totalItems == 1 ? "result" : "results") found)
                    <a href="@Model.Url()" class="alert-link ms-2"><i class="fas fa-times"></i> Clear search</a>
                </div>
            </div>
        </div>
    }

    <!-- Events Listing -->
    <div class="row mb-4">
        @if (eventsForPage.Any())
        {
            foreach (var eventItem in eventsForPage)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (eventItem.Image != null)
                        {
                            <img src="@eventItem.Image.GetCropUrl(400, 250)" class="card-img-top" alt="@eventItem.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@eventItem.Name</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-calendar-alt me-2"></i>@eventItem.EventDate.ToString("MMM dd, yyyy")
                            </p>
                            @if (!string.IsNullOrEmpty(eventItem.Location))
                            {
                                <p class="card-text text-muted mb-3">
                                    <i class="fas fa-map-marker-alt me-2"></i>@eventItem.Location
                                </p>
                            }
                            @if (eventItem.Description != null)
                            {
                                <div class="card-text">
                                    @{
                                        string descriptionText = eventItem.Description.ToString() ?? "";
                                        // Strip HTML tags for the preview
                                        string plainText = System.Text.RegularExpressions.Regex.Replace(descriptionText, "<.*?>", string.Empty);
                                        if (plainText.Length > 100)
                                        {
                                            <div class="event-description mb-4">
                                                @(plainText.Substring(0, 100))...
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="event-description mb-4">
                                                @plainText
                                            </div>
                                        }
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="card-text">No description available</p>
                            }
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="@eventItem.Url()" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                    {
                        <p>No events found matching your search criteria. Please try a different search term.</p>
                    }
                    else
                    {
                        <p>No events found. Please check back later for upcoming events.</p>
                    }
                </div>
            </div>
        }
    </div>
    
    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="row">
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?query=@searchTerm&page=@(currentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                        }
                        
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            if (i == currentPage)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="?query=@searchTerm&page=@i">@i</a></li>
                            }
                        }
                        
                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?query=@searchTerm&page=@(currentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">&raquo;</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>